<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="writer.xlsx.filename">php://output</parameter>
        <parameter key="phpspreadsheet.class">Marlinc\AdminBundle\Factory\PhpSpreadsheetFactory</parameter>
    </parameters>
    <services>
        <service id="sonata.exporter.writer.xlsx" class="Marlinc\AdminBundle\Writer\XmlExcelWriter">
            <tag name="sonata.exporter.writer"/>
            <argument type="service" id="phpspreadsheet"/>
            <argument>%writer.xlsx.filename%</argument>
        </service>
        <service id="marlinc.admin.exporter" class="Marlinc\AdminBundle\Bridge\AdminExporter">
            <argument type="service" id="sonata.exporter.exporter"/>
        </service>
        <service id="phpspreadsheet" class="%phpspreadsheet.class%" />
        <service id="marlinc.admin.filter.model" class="Marlinc\AdminBundle\Filter\ModelFilter">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="sonata.admin.filter.type" alias="doctrine_orm_model" />
        </service>
        <service id="marlinc.admin.builder.orm_datagrid" class="Marlinc\AdminBundle\Datagrid\DatagridBuilder" parent="sonata.admin.builder.orm_datagrid" >
            <argument type="service" id="sonata.admin.security.handler.role"/>
        </service>
        <service id="Marlinc\AdminBundle\Security\AssignedUserVoter">
            <tag name="security.voter"/>
            <argument type="service" id="Symfony\Component\Security\Core\Authorization\AccessDecisionManagerInterface" />
            <argument type="service" id="sonata.admin.security.handler.role" />
            <argument type="service" id="sonata.admin.pool" />
        </service>
    </services>
</container>
